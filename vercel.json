{
  "version": 2,
  "redirects": [
    {
      "source": "/",
      "destination": "https://github.com/imaliang/tmdb-proxy",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/t/p/:path*",
      "destination": "https://image.tmdb.org/t/p/:path*"
    },
    {
      "source": "/:path*",
      "destination": "/api/tmdb.js"
    }
  ],
  "headers": [
    {
      "source": "/t/p/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400, stale-while-revalidate=604800"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=60, stale-while-revalidate=300"
        }
      ]
    }
  ]
}
